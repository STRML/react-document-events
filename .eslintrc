{
  "root": true,
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "rules": {
    "strict": 0,
    "quotes": [0, "single"],
    "curly": [1, "multi-line"],
    "camelcase": 0,
    "comma-dangle": 0,
    "dot-notation": 0,
    "no-alert": 2,
    "no-console": 2,
    "no-debugger": 2,
    "no-use-before-define": [1, "nofunc"],
    "no-underscore-dangle": 0,
    "no-unused-vars": [1, {
      "argsIgnorePattern": "^((prev|next)(State|Props)|e|_.*)$",
      "vars": "local",
      "varsIgnorePattern": "(debug|^_)"
    }],
    "new-cap": 0,
    "semi": [1, "always"]
  },
  env: {
    "browser": true,
    "node": true,
    "mocha": true
  }
}
